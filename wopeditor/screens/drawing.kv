#:kivy 2.0


DrawingScreen:
    name: "drawing"

    GridLayout:
        cols: 1
        padding: [10, 0]

        Header:
            id: header
            on_press_back: app.goto_symbol(back_from=root.name)

        BoxLayout:
            Sidebar:
                id: sidebar
                SideButton:
                    text: "open dir"
                    on_release: root.open_dir()
                FloatLayout:
                    #Filler

            DrawingPreview:
                id: drawing_preview